@page
@model Ketum.Web.Pages.IndexModel
@using Microsoft.AspNetCore.Mvc.Localization
@using Ketum.Localization
@using Volo.Abp.Users
@inject IHtmlLocalizer<KetumResource> L
@inject ICurrentUser CurrentUser
@section styles {
    <abp-style-bundle>
        <abp-style src="/Pages/Index.css" />
    </abp-style-bundle>
}
@section scripts {
    <abp-script-bundle>
        <abp-script src="/Pages/Index.js" />
    </abp-script-bundle>
}
<abp-card>
    <abp-card-header>@L["Welcome"]</abp-card-header>
    <abp-card-body>
        <p>@L["LongWelcomeMessage"]</p>
        @if (!CurrentUser.IsAuthenticated)
        {
            <a abp-button="Primary" href="~/Account/Login" class="px-4"><i class="fa fa-sign-in"></i> @L["Login"]</a>
        }
        <hr />
        <p class="text-right"><a href="https://ketum.io" target="_blank">ketum.io</a></p>
    </abp-card-body>
</abp-card>
